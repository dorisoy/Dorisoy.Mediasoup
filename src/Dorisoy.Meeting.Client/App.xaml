<Application x:Class="Dorisoy.Meeting.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Dorisoy.Meeting.Client.Converters"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Startup="Application_Startup"
             Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Wpf.Ui 暗主题 -->
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:ConnectButtonTextConverter x:Key="ConnectButtonTextConverter"/>
            <converters:RoomButtonTextConverter x:Key="RoomButtonTextConverter"/>
            <converters:CameraButtonTextConverter x:Key="CameraButtonTextConverter"/>
            <converters:MicrophoneButtonTextConverter x:Key="MicButtonTextConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisConverter"/>
            <converters:ServeModeTextConverter x:Key="ServeModeTextConverter"/>
            <converters:VideoGridColumnsConverter x:Key="VideoGridColumnsConverter"/>
            <converters:SidebarArrowConverter x:Key="SidebarArrowConverter"/>
            <converters:ConnectedStatusConverter x:Key="ConnectedStatusConverter"/>
            <converters:ConnectedColorConverter x:Key="ConnectedColorConverter"/>
            
            <!-- Wpf.Ui 按钮外观转换器 -->
            <converters:ConnectedAppearanceConverter x:Key="ConnectedAppearanceConverter"/>
            <converters:RoomAppearanceConverter x:Key="RoomAppearanceConverter"/>
            <converters:MediaAppearanceConverter x:Key="MediaAppearanceConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
