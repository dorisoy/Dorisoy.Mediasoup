<ui:FluentWindow x:Class="Dorisoy.Meeting.Client.Views.SettingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="系统设置" 
        Height="700" 
        Width="600"
        MinHeight="500"
        MinWidth="450"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        ResizeMode="CanMinimize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <ui:TitleBar x:Name="TitleBar"
                     Title="系统设置"
                     Grid.Row="0"
                     ShowMaximize="False"
                     ShowMinimize="True">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="Settings24" FontSize="20" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="16,0,16,0">
            <StackPanel>

                <!-- 连接设置 -->
                <ui:Card Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="Globe24" Margin="0,0,8,0" />
                            <TextBlock Text="连接设置" FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <TextBlock Text="服务器地址" Margin="0,0,0,6" Opacity="0.7" />
                        <ui:TextBox Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="输入服务器地址..."
                                    IsReadOnly="True" />
                    </StackPanel>
                </ui:Card>

                <!-- 媒体设备选择 -->
                <ui:Card Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="Speaker224" Margin="0,0,8,0" />
                            <TextBlock Text="设备选择" FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <TextBlock Text="摄像头" Margin="0,0,0,6" Opacity="0.7" />
                        <ComboBox ItemsSource="{Binding Cameras}"
                                  SelectedItem="{Binding SelectedCamera}"
                                  DisplayMemberPath="Label"
                                  IsEnabled="{Binding IsCameraEnabled, Converter={StaticResource InverseBoolConverter}}"
                                  HorizontalAlignment="Stretch"/>

                        <TextBlock Text="麦克风" Margin="0,12,0,6" Opacity="0.7" />
                        <ComboBox ItemsSource="{Binding Microphones}"
                                  SelectedItem="{Binding SelectedMicrophone}"
                                  DisplayMemberPath="Label"
                                  IsEnabled="{Binding IsMicrophoneEnabled, Converter={StaticResource InverseBoolConverter}}"
                                  HorizontalAlignment="Stretch"/>

                        <ui:Button Content="刷新设备"
                                   Icon="{ui:SymbolIcon ArrowSync24}"
                                   Command="{Binding RefreshDevicesCommand}"
                                   Margin="0,12,0,0"
                                   HorizontalAlignment="Stretch" />
                    </StackPanel>
                </ui:Card>

                <!-- 视频质量设置 -->
                <ui:Card Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="VideoClip24" Margin="0,0,8,0" />
                            <TextBlock Text="视频质量" FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <TextBlock Text="编解码器" Margin="0,0,0,6" Opacity="0.7" />
                        <ComboBox ItemsSource="{Binding VideoCodecs}"
                                  SelectedItem="{Binding SelectedVideoCodec}"
                                  DisplayMemberPath="DisplayName"
                                  IsEnabled="{Binding IsCameraEnabled, Converter={StaticResource InverseBoolConverter}}"
                                  HorizontalAlignment="Stretch"/>
                        
                        <!-- 编解码器信息 -->
                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="10,6"
                                Margin="0,8,0,12">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedVideoCodec.DisplayName}"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,4" />
                                <TextBlock Text="{Binding SelectedVideoCodec.Description}"
                                           Opacity="0.6"
                                           FontSize="11"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="画质选择" Margin="0,0,0,6" Opacity="0.7" />
                        <ComboBox ItemsSource="{Binding VideoQualityPresets}"
                                  SelectedItem="{Binding SelectedVideoQuality}"
                                  DisplayMemberPath="DisplayName"
                                  IsEnabled="{Binding IsCameraEnabled, Converter={StaticResource InverseBoolConverter}}"
                                  HorizontalAlignment="Stretch"/>
                        
                        <!-- 当前质量信息 -->
                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="10,8"
                                Margin="0,12,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="分辨率:" 
                                           Opacity="0.6" 
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Text="{Binding SelectedVideoQuality.Resolution}" 
                                           FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="码率:" 
                                           Opacity="0.6" 
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           Text="{Binding SelectedVideoQuality.BitrateDescription}" 
                                           FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="帧率:" 
                                           Opacity="0.6" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           FontWeight="Medium">
                                    <Run Text="{Binding SelectedVideoQuality.FrameRate, Mode=OneWay}"/><Run Text=" fps"/>
                                </TextBlock>
                            </Grid>
                        </Border>
                        
                        <TextBlock Text="{Binding SelectedVideoQuality.Description}"
                                   Opacity="0.5"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </ui:Card>

                <!-- 屏幕共享设置 -->
                <ui:Card Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="ShareScreenStart24" Margin="0,0,8,0" />
                            <TextBlock Text="屏幕共享" FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <TextBlock Text="画质模式" Margin="0,0,0,6" Opacity="0.7" />
                        <ComboBox ItemsSource="{Binding ScreenSharePresets}"
                                  SelectedItem="{Binding SelectedScreenShareSettings}"
                                  DisplayMemberPath="DisplayName"
                                  IsEnabled="{Binding IsScreenSharing, Converter={StaticResource InverseBoolConverter}}"
                                  HorizontalAlignment="Stretch"/>
                        
                        <!-- 当前屏幕共享配置信息 -->
                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                CornerRadius="4"
                                Padding="10,8"
                                Margin="0,12,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="分辨率:" 
                                           Opacity="0.6" 
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Text="{Binding SelectedScreenShareSettings.Resolution}" 
                                           FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="帧率:" 
                                           Opacity="0.6" 
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           FontWeight="Medium">
                                    <Run Text="{Binding SelectedScreenShareSettings.FrameRate, Mode=OneWay}"/><Run Text=" fps"/>
                                </TextBlock>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="鼠标:" 
                                           Opacity="0.6" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           Text="{Binding SelectedScreenShareSettings.ShowCursor, Converter={StaticResource BoolToYesNoConverter}}" 
                                           FontWeight="Medium"/>
                            </Grid>
                        </Border>
                        
                        <TextBlock Text="{Binding SelectedScreenShareSettings.Description}"
                                   Opacity="0.5"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,12" />
                        
                        <!-- 显示鼠标指针选项 -->
                        <CheckBox Content="共享时显示鼠标指针"
                                  IsChecked="{Binding ScreenShareShowCursor}"
                                  IsEnabled="{Binding IsScreenSharing, Converter={StaticResource InverseBoolConverter}}"
                                  Margin="0,0,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- 视频录制设置 -->
                <ui:Card Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="Record24" Margin="0,0,8,0" />
                            <TextBlock Text="视频录制" FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <TextBlock Text="录制存储目录" Margin="0,0,0,6" Opacity="0.7" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0"
                                        Text="{Binding RecordingSavePath, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="选择录制视频保存目录..."
                                        IsReadOnly="True"
                                        Margin="0,0,8,0" />
                            <ui:Button Grid.Column="1"
                                       Icon="{ui:SymbolIcon Folder24}"
                                       ToolTip="浏览文件夹"
                                       Click="BrowseRecordingPath_Click" />
                        </Grid>
                        
                        <TextBlock Text="录制格式" Margin="0,12,0,6" Opacity="0.7" />
                        <ComboBox ItemsSource="{Binding RecordingFormats}"
                                  SelectedItem="{Binding SelectedRecordingFormat}"
                                  HorizontalAlignment="Stretch"/>
                        
                        <!-- 录制倒计时设置 -->
                        <CheckBox Content="开始录制时显示 3 秒倒计时"
                                  IsChecked="{Binding RecordingShowCountdown}"
                                  Margin="0,12,0,0"/>
                        
                        <!-- 录制边框高亮 -->
                        <CheckBox Content="录制时显示视频边框高亮"
                                  IsChecked="{Binding RecordingShowBorder}"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- 状态信息 -->
                <ui:Card Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <ui:SymbolIcon Symbol="Info24" Margin="0,0,8,0" />
                            <TextBlock Text="状态" FontWeight="SemiBold" />
                        </StackPanel>
                        
                        <TextBlock Text="{Binding StatusMessage}"
                                   TextWrapping="Wrap"
                                   Opacity="0.8"
                                   Margin="0,0,0,8" />
                        
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="服务模式: " Opacity="0.6" />
                            <TextBlock Text="{Binding ServeMode, Converter={StaticResource ServeModeTextConverter}}"
                                       Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                       FontWeight="Medium" />
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="连接状态: " Opacity="0.6" />
                            <TextBlock Text="{Binding IsConnected, Converter={StaticResource ConnectedStatusConverter}}"
                                       Foreground="{Binding IsConnected, Converter={StaticResource ConnectedColorConverter}}"
                                       FontWeight="Medium" />
                        </StackPanel>
                    </StackPanel>
                </ui:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Border Grid.Row="2" 
                Padding="16"
                Background="{DynamicResource ControlFillColorDefaultBrush}">
            <ui:Button Content="关闭"
                       HorizontalAlignment="Right"
                       Width="100"
                       Click="CloseButton_Click"/>
        </Border>
    </Grid>
</ui:FluentWindow>
