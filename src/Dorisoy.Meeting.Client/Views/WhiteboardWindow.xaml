<ui:FluentWindow x:Class="Dorisoy.Meeting.Client.Views.WhiteboardWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="电子白板"
                 d:DesignHeight="800"
                 d:DesignWidth="1200"
                 ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                 ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Default"
                 WindowState="Maximized"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d">
    <Window.Resources>
        <!-- 工具按钮样式 -->
        <Style x:Key="ToolButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20000000"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SystemAccentColorPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 颜色按钮样式 -->
        <Style x:Key="ColorButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse x:Name="outer"
                                     Width="32" Height="32"
                                     Stroke="Transparent"
                                     StrokeThickness="3"/>
                            <Ellipse Width="24" Height="24"
                                     Fill="{TemplateBinding Background}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="outer" Property="Stroke" Value="{DynamicResource SystemAccentColorPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="outer" Property="Stroke" Value="#80808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 操作按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <!-- 危险操作按钮样式 -->
        <Style x:Key="DangerButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Foreground" Value="#FFE81123"/>
        </Style>
        
        <!-- 主要操作按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Appearance" Value="Primary"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题栏和工具栏 -->
        <Grid Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <ui:TitleBar x:Name="TitleBar"
                         Title="电子白板"
                         Grid.Row="0">
                <ui:TitleBar.Header>
                    <StackPanel Orientation="Horizontal" Margin="8,0">
                        <ui:SymbolIcon Symbol="Whiteboard20" Margin="0,0,8,0"/>
                        <TextBlock Text="电子白板" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtHostName" Text=" - 主持人" VerticalAlignment="Center" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="8,0,0,0"/>
                    </StackPanel>
                </ui:TitleBar.Header>
            </ui:TitleBar>

            <!-- 工具栏 - 只有主持人可见 -->
            <Border x:Name="ToolbarPanel" Grid.Row="1" Padding="12,8" Visibility="Visible">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 绘图工具 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                CornerRadius="8" Padding="4">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="BtnPen" Style="{StaticResource ToolButtonStyle}"
                                             GroupName="Tools" IsChecked="True"
                                             ToolTip="笔触 (P)" Checked="Tool_Checked">
                                    <ui:SymbolIcon Symbol="Pen20" FontSize="20"/>
                                </RadioButton>
                                <RadioButton x:Name="BtnRectangle" Style="{StaticResource ToolButtonStyle}"
                                             GroupName="Tools" ToolTip="矩形 (R)" Checked="Tool_Checked">
                                    <ui:SymbolIcon Symbol="Square20" FontSize="20"/>
                                </RadioButton>
                                <RadioButton x:Name="BtnEllipse" Style="{StaticResource ToolButtonStyle}"
                                             GroupName="Tools" ToolTip="圆形 (C)" Checked="Tool_Checked">
                                    <ui:SymbolIcon Symbol="Circle20" FontSize="20"/>
                                </RadioButton>
                                <RadioButton x:Name="BtnText" Style="{StaticResource ToolButtonStyle}"
                                             GroupName="Tools" ToolTip="文字 (T)" Checked="Tool_Checked">
                                    <ui:SymbolIcon Symbol="TextT20" FontSize="20"/>
                                </RadioButton>
                                <Rectangle Width="1" Height="28" Fill="{DynamicResource ControlStrokeColorDefaultBrush}" Margin="4,0"/>
                                <RadioButton x:Name="BtnEraser" Style="{StaticResource ToolButtonStyle}"
                                             GroupName="Tools" ToolTip="橡皮擦 (E)" Checked="Tool_Checked">
                                    <ui:SymbolIcon Symbol="Eraser20" FontSize="20"/>
                                </RadioButton>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 颜色选择 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0,0,0">
                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                CornerRadius="8" Padding="4">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="ColorBlack" Style="{StaticResource ColorButtonStyle}"
                                             GroupName="Colors" Background="#FF000000" IsChecked="True"
                                             ToolTip="黑色" Checked="Color_Checked" Tag="#FF000000"/>
                                <RadioButton x:Name="ColorRed" Style="{StaticResource ColorButtonStyle}"
                                             GroupName="Colors" Background="#FFFF0000"
                                             ToolTip="红色" Checked="Color_Checked" Tag="#FFFF0000"/>
                                <RadioButton x:Name="ColorBlue" Style="{StaticResource ColorButtonStyle}"
                                             GroupName="Colors" Background="#FF0078D4"
                                             ToolTip="蓝色" Checked="Color_Checked" Tag="#FF0078D4"/>
                                <RadioButton x:Name="ColorGreen" Style="{StaticResource ColorButtonStyle}"
                                             GroupName="Colors" Background="#FF10893E"
                                             ToolTip="绿色" Checked="Color_Checked" Tag="#FF10893E"/>
                                <RadioButton x:Name="ColorOrange" Style="{StaticResource ColorButtonStyle}"
                                             GroupName="Colors" Background="#FFFF8C00"
                                             ToolTip="橙色" Checked="Color_Checked" Tag="#FFFF8C00"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 笔触大小 -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal">
                        <TextBlock Text="笔触:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <Slider x:Name="SliderStrokeWidth"
                                Width="120"
                                Minimum="1"
                                Maximum="20"
                                Value="3"
                                VerticalAlignment="Center"
                                ValueChanged="SliderStrokeWidth_ValueChanged" />
                        <TextBlock x:Name="TxtStrokeWidth"
                                   Text="3"
                                   Width="24"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 画布区域 -->
        <Border Grid.Row="1" Background="#FFFFFFFF" Margin="0">
            <Grid x:Name="CanvasContainer" ClipToBounds="True">
                <!-- 使用 Canvas 自定义绘制，支持更多图形 -->
                <Canvas x:Name="DrawingCanvas" 
                        Background="Transparent"
                        MouseLeftButtonDown="DrawingCanvas_MouseLeftButtonDown"
                        MouseMove="DrawingCanvas_MouseMove"
                        MouseLeftButtonUp="DrawingCanvas_MouseLeftButtonUp"
                        MouseLeave="DrawingCanvas_MouseLeave">
                    
                    <!-- 文字输入框 - 默认隐藏，位于 Canvas 内部以支持定位 -->
                    <Border x:Name="TextInputContainer"
                            Visibility="Collapsed"
                            Background="White"
                            BorderBrush="{DynamicResource SystemAccentColorPrimaryBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Padding="4,2">
                        <TextBox x:Name="TextInputBox"
                                 MinWidth="80"
                                 MinHeight="24"
                                 FontSize="16"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 KeyDown="TextInputBox_KeyDown"
                                 LostFocus="TextInputBox_LostFocus"/>
                    </Border>
                </Canvas>
            </Grid>
        </Border>

        <!-- 底部操作栏 -->
        <Border Grid.Row="2" Background="{DynamicResource ControlFillColorDefaultBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：状态信息 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Info20" Margin="0,0,8,0" 
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="TxtStatus" 
                               Text="正在演示中..." 
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 中间：观看者提示 -->
                <StackPanel x:Name="ViewerHint" Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <ui:SymbolIcon Symbol="Eye20" Margin="0,0,8,0" 
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}"/>
                    <TextBlock Text="观看模式 - 由主持人控制白板" 
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                               FontSize="14"/>
                </StackPanel>

                <!-- 右侧：操作按钮（只有主持人可见）-->
                <StackPanel x:Name="HostActions" Grid.Column="2" Orientation="Horizontal">
                    <!-- 撤销按钮 -->
                    <ui:Button x:Name="BtnUndo" 
                               Style="{StaticResource ActionButtonStyle}"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon ArrowUndo20}"
                               Content="撤销"
                               ToolTip="撤销上一步 (Ctrl+Z)"
                               Click="BtnUndo_Click"/>
                    
                    <!-- 清空按钮 -->
                    <ui:Button x:Name="BtnClear"
                               Style="{StaticResource ActionButtonStyle}"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon Delete20}"
                               Content="清空"
                               ToolTip="清空画布"
                               Click="BtnClear_Click"/>
                    
                    <!-- 保存按钮 -->
                    <ui:Button x:Name="BtnSave" 
                               Style="{StaticResource ActionButtonStyle}"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon Save20}"
                               Content="保存"
                               ToolTip="保存为图片"
                               Click="BtnSave_Click"/>
                    
                    <!-- 分隔线 -->
                    <Border Width="1" Height="24" 
                            Background="{DynamicResource ControlStrokeColorDefaultBrush}" 
                            Margin="12,0"
                            VerticalAlignment="Center"/>
                    
                    <!-- 取消按钮 -->
                    <ui:Button x:Name="BtnCancel" 
                               Style="{StaticResource ActionButtonStyle}"
                               Appearance="Secondary"
                               Icon="{ui:SymbolIcon Dismiss20}"
                               Content="取消"
                               ToolTip="取消并关闭"
                               Click="BtnCancel_Click"/>
                    
                    <!-- 完成按钮 -->
                    <ui:Button x:Name="BtnFinish" 
                               Style="{StaticResource PrimaryButtonStyle}"
                               Icon="{ui:SymbolIcon Checkmark20}"
                               Content="完成"
                               ToolTip="完成并关闭"
                               Click="BtnFinish_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>
