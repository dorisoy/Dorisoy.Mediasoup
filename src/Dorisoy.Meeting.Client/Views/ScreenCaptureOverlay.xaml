<Window x:Class="Dorisoy.Meeting.Client.Views.ScreenCaptureOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="屏幕截取"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Cursor="Cross">
    
    <Window.Resources>
        <!-- 工具按钮样式 -->
        <Style x:Key="ToolButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                CornerRadius="4"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 颜色按钮样式 -->
        <Style x:Key="ColorButtonStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Ellipse x:Name="Outer" Width="20" Height="20"
                                     Stroke="Transparent" StrokeThickness="2"/>
                            <Ellipse Width="14" Height="14"
                                     Fill="{TemplateBinding Background}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Outer" Property="Stroke" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 操作按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid x:Name="RootGrid">
        <!-- 半透明遮罩层 -->
        <Canvas x:Name="OverlayCanvas" 
                Background="#60000000"
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                MouseMove="Canvas_MouseMove"
                MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
            
            <!-- 选择区域（通过剪切实现透明） -->
            <Canvas.Clip>
                <CombinedGeometry GeometryCombineMode="Exclude">
                    <CombinedGeometry.Geometry1>
                        <RectangleGeometry x:Name="FullScreenGeometry"/>
                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <RectangleGeometry x:Name="SelectionGeometry" Rect="0,0,0,0"/>
                    </CombinedGeometry.Geometry2>
                </CombinedGeometry>
            </Canvas.Clip>
        </Canvas>
        
        <!-- 选区边框 + 绘图层（合为一体） -->
        <Border x:Name="SelectionBorder"
                BorderBrush="#00AAFF"
                BorderThickness="2"
                Background="Transparent"
                Visibility="Collapsed"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Border.Effect>
                <DropShadowEffect Color="#00AAFF" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            
            <!-- 绘图画布（直接在选区内） -->
            <Canvas x:Name="DrawingCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    MouseLeftButtonDown="DrawingCanvas_MouseLeftButtonDown"
                    MouseMove="DrawingCanvas_MouseMove"
                    MouseLeftButtonUp="DrawingCanvas_MouseLeftButtonUp">
                
                <!-- 文字输入框 -->
                <Border x:Name="TextInputContainer"
                        Visibility="Collapsed"
                        Background="White"
                        BorderBrush="#0078D4"
                        BorderThickness="2"
                        CornerRadius="4"
                        Padding="4,2">
                    <TextBox x:Name="TextInputBox"
                             MinWidth="60"
                             MinHeight="20"
                             FontSize="14"
                             Background="Transparent"
                             BorderThickness="0"
                             KeyDown="TextInputBox_KeyDown"
                             LostFocus="TextInputBox_LostFocus"/>
                </Border>
            </Canvas>
        </Border>
        
        <!-- 选区尺寸提示 -->
        <Border x:Name="SizeHint"
                Background="#E0333333"
                CornerRadius="4"
                Padding="6,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                IsHitTestVisible="False">
            <TextBlock x:Name="SizeText"
                       Foreground="White"
                       FontSize="11"
                       FontFamily="Consolas"/>
        </Border>
        
        <!-- 统一工具栏（选区下方） -->
        <Border x:Name="Toolbar"
                Background="#E8333333"
                CornerRadius="6"
                Padding="6,4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                MinWidth="520">
            <StackPanel Orientation="Horizontal">
                <!-- 绘图工具 -->
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="BtnSelect" Style="{StaticResource ToolButtonStyle}"
                                 GroupName="Tools" IsChecked="True"
                                 ToolTip="选择 (V)" Checked="Tool_Checked">
                        <ui:SymbolIcon Symbol="Cursor20" FontSize="14" Foreground="White"/>
                    </RadioButton>
                    <RadioButton x:Name="BtnPen" Style="{StaticResource ToolButtonStyle}"
                                 GroupName="Tools" ToolTip="画笔 (P)" Checked="Tool_Checked">
                        <ui:SymbolIcon Symbol="Pen20" FontSize="14" Foreground="White"/>
                    </RadioButton>
                    <RadioButton x:Name="BtnRectangle" Style="{StaticResource ToolButtonStyle}"
                                 GroupName="Tools" ToolTip="矩形 (R)" Checked="Tool_Checked">
                        <ui:SymbolIcon Symbol="Square20" FontSize="14" Foreground="White"/>
                    </RadioButton>
                    <RadioButton x:Name="BtnEllipse" Style="{StaticResource ToolButtonStyle}"
                                 GroupName="Tools" ToolTip="椭圆 (O)" Checked="Tool_Checked">
                        <ui:SymbolIcon Symbol="Circle20" FontSize="14" Foreground="White"/>
                    </RadioButton>
                    <RadioButton x:Name="BtnArrow" Style="{StaticResource ToolButtonStyle}"
                                 GroupName="Tools" ToolTip="箭头 (A)" Checked="Tool_Checked">
                        <ui:SymbolIcon Symbol="ArrowRight20" FontSize="14" Foreground="White"/>
                    </RadioButton>
                    <RadioButton x:Name="BtnText" Style="{StaticResource ToolButtonStyle}"
                                 GroupName="Tools" ToolTip="文字 (T)" Checked="Tool_Checked">
                        <ui:SymbolIcon Symbol="TextT20" FontSize="14" Foreground="White"/>
                    </RadioButton>
                </StackPanel>
                
                <Rectangle Width="1" Height="24" Fill="#50FFFFFF" Margin="6,0"/>
                
                <!-- 颜色选择 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton x:Name="ColorRed" Style="{StaticResource ColorButtonStyle}"
                                 GroupName="Colors" Background="#FFFF0000" IsChecked="True"
                                 ToolTip="红色" Checked="Color_Checked" Tag="#FFFF0000"/>
                    <RadioButton x:Name="ColorBlue" Style="{StaticResource ColorButtonStyle}"
                                 GroupName="Colors" Background="#FF0078D4"
                                 ToolTip="蓝色" Checked="Color_Checked" Tag="#FF0078D4"/>
                    <RadioButton x:Name="ColorGreen" Style="{StaticResource ColorButtonStyle}"
                                 GroupName="Colors" Background="#FF10893E"
                                 ToolTip="绿色" Checked="Color_Checked" Tag="#FF10893E"/>
                    <RadioButton x:Name="ColorYellow" Style="{StaticResource ColorButtonStyle}"
                                 GroupName="Colors" Background="#FFFFD700"
                                 ToolTip="黄色" Checked="Color_Checked" Tag="#FFFFD700"/>
                    <RadioButton x:Name="ColorWhite" Style="{StaticResource ColorButtonStyle}"
                                 GroupName="Colors" Background="#FFFFFFFF"
                                 ToolTip="白色" Checked="Color_Checked" Tag="#FFFFFFFF"/>
                </StackPanel>
                
                <Rectangle Width="1" Height="24" Fill="#50FFFFFF" Margin="6,0"/>
                
                <!-- 笔触大小 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="粗细" VerticalAlignment="Center" Margin="0,0,4,0"
                               Foreground="#AAFFFFFF" FontSize="11"/>
                    <Slider x:Name="SliderStrokeWidth" Width="60" Minimum="1" Maximum="10" Value="3"
                            VerticalAlignment="Center" ValueChanged="SliderStrokeWidth_ValueChanged"/>
                </StackPanel>
                
                <Rectangle Width="1" Height="24" Fill="#50FFFFFF" Margin="6,0"/>
                
                <!-- 操作按钮 -->
                <StackPanel Orientation="Horizontal">
                    <!-- 撤销 -->
                    <Border Style="{StaticResource ActionButtonStyle}" MouseLeftButtonDown="BtnUndo_Click" ToolTip="撤销 (Ctrl+Z)">
                        <ui:SymbolIcon Symbol="ArrowUndo20" FontSize="14" Foreground="White"/>
                    </Border>
                    
                    <!-- 保存 -->
                    <Border Style="{StaticResource ActionButtonStyle}" MouseLeftButtonDown="BtnSave_Click" ToolTip="保存 (Ctrl+S)">
                        <ui:SymbolIcon Symbol="Save20" FontSize="14" Foreground="White"/>
                    </Border>
                </StackPanel>
                
                <Rectangle Width="1" Height="24" Fill="#50FFFFFF" Margin="6,0"/>
                
                <!-- 取消/确定 -->
                <StackPanel Orientation="Horizontal">
                    <Border Style="{StaticResource ActionButtonStyle}" MouseLeftButtonDown="BtnCancel_Click" ToolTip="取消 (Esc)">
                        <ui:SymbolIcon Symbol="Dismiss20" FontSize="14" Foreground="#FFAAAAAA"/>
                    </Border>
                    
                    <Border Background="#0078D4" CornerRadius="4" Padding="12,4" Margin="2,0" Cursor="Hand"
                            MouseLeftButtonDown="BtnConfirm_Click" ToolTip="确定 (Enter)">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Checkmark20" FontSize="14" Foreground="White"/>
                            <TextBlock Text="完成" Foreground="White" FontSize="12" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 提示文字 -->
        <TextBlock x:Name="HintText"
                   Text="按住鼠标左键拖动选择截图区域，按 Esc 取消"
                   Foreground="White"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
