<ui:FluentWindow x:Class="Dorisoy.Meeting.Client.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:views="clr-namespace:Dorisoy.Meeting.Client.Views"
                 mc:Ignorable="d"
                 Title="Dorisoy Meeting"
                 Height="700"
                 Width="1100"
                 MinHeight="500"
                 MinWidth="800"
                 WindowStartupLocation="CenterScreen"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <ui:TitleBar x:Name="TitleBar"
                     Title="Dorisoy Meeting Client"
                     Grid.Row="0"
                     ShowMaximize="True"
                     ShowMinimize="True">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="Video24"
                               FontSize="20" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- 主布局：视频区 + 浮动工具栏 -->
        <Grid Grid.Row="1">

            <!-- 主视频区域（占据全部空间） -->
            <Grid Background="{DynamicResource ApplicationBackgroundBrush}">

                <!-- 远端视频网格区域 -->
                <Border Margin="0,0,0,90"
                        CornerRadius="8">
                    <Grid>
                        <!-- 远端视频网格列表 -->
                        <ItemsControl ItemsSource="{Binding RemoteVideos}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="{Binding RemoteVideos.Count, 
                                        Converter={StaticResource VideoGridColumnsConverter}}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4"
                                            Padding="0"
                                            CornerRadius="8"
                                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                                            ClipToBounds="True">
                                        <Grid MinWidth="200"
                                              MinHeight="150">
                                            <Image Source="{Binding VideoFrame}"
                                                   Stretch="UniformToFill"
                                                   RenderOptions.BitmapScalingMode="HighQuality" />

                                            <!-- 无视频时的占位符 -->
                                            <StackPanel HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Visibility="{Binding VideoFrame, 
                                                            Converter={StaticResource NullToVisibleConverter}}">
                                                <ui:SymbolIcon Symbol="Person24"
                                                               FontSize="48"
                                                               Opacity="0.3" />
                                                <TextBlock Text="{Binding DisplayName}"
                                                           Opacity="0.5"
                                                           FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,8,0,0" />
                                            </StackPanel>

                                            <!-- 用户名标签 -->
                                            <Border Background="#80000000"
                                                    Padding="10,6"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Bottom"
                                                    Margin="8"
                                                    CornerRadius="4">
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Width="8"
                                                             Height="8"
                                                             Fill="#4CAF50"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,6,0" />
                                                    <TextBlock Text="{Binding DisplayName}"
                                                               Foreground="White"
                                                               FontSize="12" />
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 无远端视频时的占位符 -->
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding HasNoRemoteVideos, 
                                        Converter={StaticResource BoolToVisConverter}}">
                            <ui:SymbolIcon Symbol="People24"
                                           FontSize="80"
                                           Opacity="0.2" />
                            <TextBlock Text="等待其他参与者加入..."
                                       Opacity="0.5"
                                       FontSize="18"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0" />
                            <TextBlock Text="当有用户加入房间并开启视频时，将在此处显示"
                                       Opacity="0.3"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 本地视频预览 - 悬浮右下角 -->
                <Border Margin="0,0,20,110"
                        Padding="0"
                        CornerRadius="8"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Width="220"
                        Height="150"
                        ClipToBounds="True"
                        Visibility="{Binding IsSelfViewVisible, Converter={StaticResource BoolToVisConverter}}">
                    <Grid ClipToBounds="True">
                        <Image Source="{Binding LocalVideoFrame}"
                               Stretch="UniformToFill"
                               RenderOptions.BitmapScalingMode="HighQuality" />

                        <!-- 无本地视频时的占位符 -->
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding LocalVideoFrame, 
                                        Converter={StaticResource NullToVisibleConverter}}">
                            <ui:SymbolIcon Symbol="Person24"
                                           FontSize="36"
                                           Opacity="0.3" />
                            <TextBlock Text="本地预览"
                                       Opacity="0.5"
                                       FontSize="11"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0" />
                        </StackPanel>

                        <!-- 本地视频标签 -->
                        <Border Background="#80000000"
                                Padding="8,4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Margin="6"
                                CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Video24"
                                               FontSize="12"
                                               Foreground="White"
                                               Margin="0,0,4,0" />
                                <TextBlock Text="{Binding CurrentUserName, FallbackValue='我'}"
                                           Foreground="White"
                                           FontSize="11" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- 底部控制栏 -->
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        VerticalAlignment="Bottom"
                        Height="90"
                        CornerRadius="0,0,0,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                            <!-- 静音（麦克风开关） -->
                            <StackPanel Margin="12,0">
                                <ui:Button x:Name="MicrophoneButton"
                                           Command="{Binding ToggleMicrophoneCommand}"
                                           Width="56"
                                           Height="56"
                                           CornerRadius="28">
                                    <ui:Button.Style>
                                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                            <Setter Property="Appearance" Value="Transparent" />
                                            <Setter Property="ToolTip" Value="开启麦克风" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMicrophoneEnabled}" Value="True">
                                                    <Setter Property="Appearance" Value="Success" />
                                                    <Setter Property="ToolTip" Value="关闭麦克风" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:Button.Style>
                                    <ui:SymbolIcon FontSize="24">
                                        <ui:SymbolIcon.Style>
                                            <Style TargetType="ui:SymbolIcon">
                                                <Setter Property="Symbol" Value="MicOff24" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMicrophoneEnabled}" Value="True">
                                                        <Setter Property="Symbol" Value="Mic24" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:SymbolIcon.Style>
                                    </ui:SymbolIcon>
                                </ui:Button>
                            </StackPanel>

                            <!-- 视频（摄像头开关） -->
                            <StackPanel Margin="12,0">
                                <ui:Button x:Name="CameraButton"
                                           Command="{Binding ToggleCameraCommand}"
                                           Width="56"
                                           Height="56"
                                           CornerRadius="28">
                                    <ui:Button.Style>
                                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                            <Setter Property="Appearance" Value="Transparent" />
                                            <Setter Property="ToolTip" Value="开启摄像头" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCameraEnabled}" Value="True">
                                                    <Setter Property="Appearance" Value="Success" />
                                                    <Setter Property="ToolTip" Value="关闭摄像头" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:Button.Style>
                                    <ui:SymbolIcon FontSize="24">
                                        <ui:SymbolIcon.Style>
                                            <Style TargetType="ui:SymbolIcon">
                                                <Setter Property="Symbol" Value="VideoOff24" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCameraEnabled}" Value="True">
                                                        <Setter Property="Symbol" Value="Video24" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:SymbolIcon.Style>
                                    </ui:SymbolIcon>
                                </ui:Button>
                            </StackPanel>

                            <!-- 分隔线 -->
                            <Border Width="1"
                                    Height="40"
                                    Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    Margin="8,0" />

                            <!-- 共享屏幕 -->
                            <StackPanel Margin="12,0">
                                <ui:Button Command="{Binding ShareScreenCommand}"
                                           ToolTip="共享屏幕"
                                           Appearance="Transparent"
                                           Width="56"
                                           Height="56"
                                           CornerRadius="28">
                                    <ui:SymbolIcon Symbol="ShareScreenStart24"
                                                   FontSize="24" />
                                </ui:Button>
                            </StackPanel>

                            <!-- 举手 -->
                            <StackPanel Margin="12,0">
                                <ui:Button x:Name="RaiseHandButton"
                                           Command="{Binding RaiseHandCommand}"
                                           Width="56"
                                           Height="56"
                                           CornerRadius="28">
                                    <ui:Button.Style>
                                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                            <Setter Property="Appearance" Value="Transparent" />
                                            <Setter Property="ToolTip" Value="举手发言" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsHandRaised}" Value="True">
                                                    <Setter Property="Appearance" Value="Success" />
                                                    <Setter Property="ToolTip" Value="放下手" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:Button.Style>
                                    <ui:SymbolIcon Symbol="HandRight24"
                                                   FontSize="24" />
                                </ui:Button>
                            </StackPanel>

                            <!-- 聊天 -->
                            <StackPanel Margin="12,0">
                                <ui:Button Command="{Binding ChatCommand}"
                                           ToolTip="聊天"
                                           Appearance="Transparent"
                                           Width="56"
                                           Height="56"
                                           CornerRadius="28">
                                    <ui:SymbolIcon Symbol="Chat24"
                                                   FontSize="24" />
                                </ui:Button>
                            </StackPanel>

                            <!-- 分隔线 -->
                            <Border Width="1"
                                    Height="40"
                                    Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    Margin="8,0" />

                            <!-- 系统设置 -->
                            <StackPanel Margin="12,0">
                                <ui:Button Command="{Binding OpenSettingsCommand}"
                                           ToolTip="系统设置"
                                           Appearance="Transparent"
                                           Width="56"
                                           Height="56"
                                           CornerRadius="28">
                                    <ui:SymbolIcon Symbol="Settings24"
                                                   FontSize="24" />
                                </ui:Button>
                            </StackPanel>

                            <!-- 离开/加入 - 加入后显示"离开房间"（红色），点击后退出到 JoinRoomWindow -->
                            <StackPanel Margin="12,0">
                                <ui:Button x:Name="LeaveRoomButton"
                                           Command="{Binding ExitToJoinWindowCommand}"
                                           Width="56"
                                           Height="56"
                                           CornerRadius="28">
                                    <ui:Button.Style>
                                        <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                            <Setter Property="Appearance" Value="Transparent" />
                                            <Setter Property="ToolTip" Value="加入房间" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsJoinedRoom}" Value="True">
                                                    <Setter Property="Appearance" Value="Danger" />
                                                    <Setter Property="ToolTip" Value="离开房间" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ui:Button.Style>
                                    <ui:SymbolIcon Symbol="CallEnd24"
                                                   FontSize="24" />
                                </ui:Button>
                            </StackPanel>

                        </StackPanel>

                        <!-- 右侧：房间信息和成员数 -->
                        <StackPanel HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,20,0"
                                    Orientation="Horizontal">
                            <TextBlock Text="{Binding RoomId, StringFormat='房间: {0}'}"
                                       FontSize="14"
                                       Opacity="0.6"
                                       VerticalAlignment="Center"
                                       Margin="0,0,16,0" />
                            <ui:SymbolIcon Symbol="People24"
                                           FontSize="16"
                                           Opacity="0.6"
                                           Margin="0,0,6,0" />
                            <TextBlock Text="{Binding OnlinePeerCount, StringFormat='在线: {0}人'}"
                                       FontSize="14"
                                       Opacity="0.6"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 加载指示器 -->
                <Border Background="#80000000"
                        CornerRadius="8"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <ui:ProgressRing IsIndeterminate="True"
                                         Width="48"
                                         Height="48" />
                        <TextBlock Text="处理中..."
                                   Foreground="White"
                                   Margin="0,12,0,0"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <!-- 断线重连覆盖层 -->
                <Border Background="#E0000000"
                        CornerRadius="8"
                        Panel.ZIndex="300"
                        Visibility="{Binding IsReconnecting, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                MinWidth="300">
                        <ui:SymbolIcon Symbol="WifiWarning24"
                                       FontSize="64"
                                       Foreground="#FFA500"
                                       Margin="0,0,0,20" />
                        <TextBlock Text="{Binding ReconnectMessage}"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16" />
                        <TextBlock Foreground="White"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"
                                   Visibility="{Binding ShowManualReconnect, Converter={StaticResource InverseBoolToVisConverter}}">
                            <Run Text="剩余 " />
                            <Run Text="{Binding ReconnectCountdown}" FontWeight="Bold" />
                            <Run Text=" 秒" />
                        </TextBlock>
                        <ui:ProgressRing IsIndeterminate="True"
                                         Width="32"
                                         Height="32"
                                         Margin="0,0,0,20"
                                         Visibility="{Binding ShowManualReconnect, Converter={StaticResource InverseBoolToVisConverter}}" />
                        <ui:Button Content="手动重连"
                                   Command="{Binding ManualReconnectCommand}"
                                   Appearance="Primary"
                                   Padding="32,12"
                                   FontSize="14"
                                   Visibility="{Binding ShowManualReconnect, Converter={StaticResource BoolToVisConverter}}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 左侧浮动工具栏 - 透明背景，垂直居中，在视频上层 -->
            <Border HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0"
                    Background="#40000000"
                    CornerRadius="12"
                    Padding="6,12"
                    Panel.ZIndex="100">
                <StackPanel>
                    <!-- 分享教室 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="分享教室"
                               Appearance="Transparent"
                               Command="{Binding ShareRoomCommand}">
                        <ui:SymbolIcon Symbol="Share24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 隐藏自我视图 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="隐藏自我视图"
                               Appearance="Transparent"
                               Command="{Binding ToggleSelfViewCommand}">
                        <ui:SymbolIcon Symbol="EyeOff24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 录制 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="录制"
                               Appearance="Transparent"
                               Command="{Binding RecordCommand}">
                        <ui:SymbolIcon Symbol="Record24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 全屏 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="全屏"
                               Appearance="Transparent"
                               Command="{Binding FullScreenCommand}">
                        <ui:SymbolIcon Symbol="FullScreenMaximize24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 分隔线 -->
                    <Border Height="1"
                            Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                            Margin="6,8"
                            Opacity="0.5" />

                    <!-- 表情 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="表情"
                               Appearance="Transparent"
                               Command="{Binding EmojiCommand}">
                        <ui:SymbolIcon Symbol="Emoji24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 同步转译 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="同步转译"
                               Appearance="Transparent"
                               Command="{Binding TranslateCommand}">
                        <ui:SymbolIcon Symbol="Translate24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 投票 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="投票"
                               Appearance="Transparent"
                               Command="{Binding PollCommand}">
                        <ui:SymbolIcon Symbol="Poll24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 编辑器 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="文本编辑器"
                               Appearance="Transparent"
                               Command="{Binding EditorCommand}">
                        <ui:SymbolIcon Symbol="Document24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 分隔线 -->
                    <Border Height="1"
                            Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                            Margin="6,8"
                            Opacity="0.5" />

                    <!-- 白板 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="白板"
                               Appearance="Transparent"
                               Command="{Binding WhiteboardCommand}">
                        <ui:SymbolIcon Symbol="Whiteboard24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 画中画 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="画中画"
                               Appearance="Transparent"
                               Command="{Binding PipCommand}">
                        <ui:SymbolIcon Symbol="PictureInPicture24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 共享屏幕 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="共享屏幕"
                               Appearance="Transparent"
                               Command="{Binding ShareScreenCommand}">
                        <ui:SymbolIcon Symbol="ShareScreenStart24"
                                       FontSize="18" />
                    </ui:Button>

                    <!-- 屏幕截图 -->
                    <ui:Button Width="44"
                               Height="44"
                               CornerRadius="8"
                               Margin="0,3"
                               ToolTip="屏幕截图"
                               Appearance="Transparent"
                               Command="{Binding ScreenshotCommand}">
                        <ui:SymbolIcon Symbol="Screenshot24"
                                       FontSize="18" />
                    </ui:Button>
                </StackPanel>
            </Border>

            <!-- 表情反应显示区域 - 左下角 -->
            <Border HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="80,0,0,110"
                    Padding="16,12"
                    CornerRadius="12"
                    Background="#E0333333"
                    Panel.ZIndex="150"
                    Visibility="{Binding IsEmojiReactionVisible, Converter={StaticResource BoolToVisConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentEmojiReaction.Emoji}"
                               FontSize="32"
                               Margin="0,0,10,0" />
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentEmojiReaction.SenderName}"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="White" />
                        <TextBlock Text="发送了一个表情"
                                   FontSize="11"
                                   Opacity="0.7"
                                   Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 屏幕共享请求弹窗 -->
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="24"
                    CornerRadius="12"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    Panel.ZIndex="200"
                    Visibility="{Binding HasPendingScreenShareRequest, Converter={StaticResource BoolToVisConverter}}">
                <StackPanel MinWidth="280">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,16">
                        <ui:SymbolIcon Symbol="ShareScreenStart24"
                                       FontSize="24"
                                       Margin="0,0,10,0" />
                        <TextBlock Text="屏幕共享请求"
                                   FontSize="16"
                                   FontWeight="SemiBold" />
                    </StackPanel>
                    <TextBlock Margin="0,0,0,20"
                               TextWrapping="Wrap">
                            <Run Text="{Binding PendingScreenShareRequesterName}" />
                            <Run Text=" 请求向您共享屏幕" />
                    </TextBlock>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <ui:Button Content="拒绝"
                                   Appearance="Secondary"
                                   Command="{Binding RejectScreenShareCommand}"
                                   Margin="0,0,10,0"
                                   Padding="20,8" />
                        <ui:Button Content="接受"
                                   Appearance="Primary"
                                   Command="{Binding AcceptScreenShareCommand}"
                                   Padding="20,8" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 右侧浮动聊天面板 - 覆盖在视频上层 -->
            <Border HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Width="580"
                    Margin="0,0,0,91"
                    Background="{DynamicResource ApplicationBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1,0,0,0"
                    Panel.ZIndex="180"
                    Visibility="{Binding IsChatPanelVisible, Converter={StaticResource BoolToVisConverter}}">
                <views:ChatPanel DataContext="{Binding}" />
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
