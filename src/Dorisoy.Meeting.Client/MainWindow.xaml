<ui:FluentWindow x:Class="Dorisoy.Meeting.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:views="clr-namespace:Dorisoy.Meeting.Client.Views"
        mc:Ignorable="d"
        Title="Dorisoy Meeting" 
        Height="700" 
        Width="1100"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <ui:TitleBar x:Name="TitleBar"
                     Title="Dorisoy.SFU"
                     Grid.Row="0"
                     ShowMaximize="True"
                     ShowMinimize="True">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="Video24" FontSize="20" />
            </ui:TitleBar.Icon>
            <ui:TitleBar.MenuContent>
                <Menu FontSize="14">
                    <ui:MenuItem Header="文件(F)"
                                 Icon="{ui:SymbolIcon Folder20}">
                        <MenuItem Header="打开文件夹..."
                                  InputGestureText="Ctrl+O">
                            <MenuItem.Icon>
                                <ui:SymbolIcon Symbol="FolderOpen20" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ui:MenuItem>
                    <ui:MenuItem Header="视图(V)"
                                 Icon="{ui:SymbolIcon ContentView20}">
                        <MenuItem x:Name="ToggleSidebarMenuItem"
                                  Header="隐藏侧栏" />
                    </ui:MenuItem>
                    <ui:MenuItem Header="帮助(H)"
                                 Icon="{ui:SymbolIcon ChatHelp20}">
                        <MenuItem Header="检查更新" />
                    </ui:MenuItem>
                </Menu>
            </ui:TitleBar.MenuContent>

            <ui:TitleBar.RightMenuContent>
                <!-- 右侧：房间信息和成员数 -->
                <StackPanel HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0"
                            Orientation="Horizontal">
                    <TextBlock Text="{Binding RoomId, StringFormat='房间: {0}'}"
                               FontSize="14"
                               Opacity="0.6"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0" />
                    <ui:SymbolIcon Symbol="People24"
                                   FontSize="16"
                                   Opacity="0.6"
                                   Margin="0,0,6,0" />
                    <TextBlock Text="{Binding OnlinePeerCount, StringFormat='在线: {0}人'}"
                               FontSize="14"
                               Opacity="0.6"
                               VerticalAlignment="Center" />
                </StackPanel>
            </ui:TitleBar.RightMenuContent>
        </ui:TitleBar>

        <!-- 主布局：左侧边栏 + 右侧主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左侧边栏 - 可隐藏 -->
                <ColumnDefinition Width="Auto"/>
                <!-- 主内容区 -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧控制面板 -->
            <Border Grid.Column="0"
                    Width="320"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    Visibility="{Binding IsSidebarVisible, Converter={StaticResource BoolToVisConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">

                        <!-- 应用标题 -->
                        <!--<StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,20">
                            <ui:SymbolIcon Symbol="Settings24"
                                           FontSize="20"
                                           Margin="0,0,10,0" />
                            <TextBlock Text="系统设置"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center" />
                        </StackPanel>-->

                        <!-- 连接设置 -->
                        <ui:Card Margin="0,0,0,12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,12">
                                    <ui:SymbolIcon Symbol="Globe24"
                                                   Margin="0,0,8,0" />
                                    <TextBlock Text="连接设置"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock Text="服务器地址"
                                           Margin="0,0,0,6"
                                           Opacity="0.7" />
                                <ui:TextBox Text="{Binding ServerUrl, UpdateSourceTrigger=PropertyChanged}"
                                            PlaceholderText="输入服务器地址..."
                                            IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}" />

                                <TextBlock Text="选择用户"
                                           Margin="0,12,0,6"
                                           Opacity="0.7" />
                                <ComboBox SelectedIndex="{Binding SelectedPeerIndex}"
                                          IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}">
                                    <ComboBoxItem>Peer 0</ComboBoxItem>
                                    <ComboBoxItem>Peer 1</ComboBoxItem>
                                    <ComboBoxItem>Peer 2</ComboBoxItem>
                                    <ComboBoxItem>Peer 3</ComboBoxItem>
                                    <ComboBoxItem>Peer 4</ComboBoxItem>
                                    <ComboBoxItem>Peer 5</ComboBoxItem>
                                    <ComboBoxItem>Peer 6</ComboBoxItem>
                                    <ComboBoxItem>Peer 7</ComboBoxItem>
                                    <ComboBoxItem>Peer 8 (管理员)</ComboBoxItem>
                                    <ComboBoxItem>Peer 9 (管理员)</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </ui:Card>

                        <!-- 房间设置 -->
                        <ui:Card Margin="0,0,0,12"
                                 IsEnabled="{Binding IsConnected}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,12">
                                    <ui:SymbolIcon Symbol="Door20"
                                                   Margin="0,0,8,0" />
                                    <TextBlock Text="房间设置"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock Text="选择房间"
                                           Margin="0,0,0,6"
                                           Opacity="0.7" />
                                <ComboBox SelectedIndex="{Binding SelectedRoomIndex}"
                                          IsEnabled="{Binding IsJoinedRoom, Converter={StaticResource InverseBoolConverter}}">
                                    <ComboBoxItem>Room 0</ComboBoxItem>
                                    <ComboBoxItem>Room 1</ComboBoxItem>
                                    <ComboBoxItem>Room 2</ComboBoxItem>
                                    <ComboBoxItem>Room 3</ComboBoxItem>
                                    <ComboBoxItem>Room 4</ComboBoxItem>
                                    <ComboBoxItem>Room 5</ComboBoxItem>
                                    <ComboBoxItem>Room 6</ComboBoxItem>
                                    <ComboBoxItem>Room 7</ComboBoxItem>
                                    <ComboBoxItem>Room 8</ComboBoxItem>
                                    <ComboBoxItem>Room 9</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </ui:Card>

                        <!-- 媒体设备选择 -->
                        <ui:Card Margin="0,0,0,12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,12">
                                    <ui:SymbolIcon Symbol="Speaker224"
                                                   Margin="0,0,8,0" />
                                    <TextBlock Text="设备选择"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock Text="摄像头"
                                           Margin="0,0,0,6"
                                           Opacity="0.7" />
                                <ComboBox ItemsSource="{Binding Cameras}"
                                          SelectedItem="{Binding SelectedCamera}"
                                          DisplayMemberPath="Label"
                                          IsEnabled="{Binding IsCameraEnabled, Converter={StaticResource InverseBoolConverter}}" />

                                <TextBlock Text="麦克风"
                                           Margin="0,12,0,6"
                                           Opacity="0.7" />
                                <ComboBox ItemsSource="{Binding Microphones}"
                                          SelectedItem="{Binding SelectedMicrophone}"
                                          DisplayMemberPath="Label"
                                          IsEnabled="{Binding IsMicrophoneEnabled, Converter={StaticResource InverseBoolConverter}}" />

                                <ui:Button Content="刷新设备"
                                           Icon="{ui:SymbolIcon ArrowSync24}"
                                           Command="{Binding RefreshDevicesCommand}"
                                           Margin="0,12,0,0"
                                           HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </ui:Card>

                        <!-- 视频质量设置 -->
                        <ui:Card Margin="0,0,0,12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,12">
                                    <ui:SymbolIcon Symbol="VideoClip24"
                                                   Margin="0,0,8,0" />
                                    <TextBlock Text="视频质量"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                                
                                <TextBlock Text="画质选择"
                                           Margin="0,0,0,6"
                                           Opacity="0.7" />
                                <ComboBox ItemsSource="{Binding VideoQualityPresets}"
                                          SelectedItem="{Binding SelectedVideoQuality}"
                                          DisplayMemberPath="DisplayName"
                                          IsEnabled="{Binding IsCameraEnabled, Converter={StaticResource InverseBoolConverter}}" />
                                
                                <!-- 当前质量信息 -->
                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                        CornerRadius="4"
                                        Padding="10,8"
                                        Margin="0,12,0,0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                   Text="分辨率:" 
                                                   Opacity="0.6" 
                                                   Margin="0,0,8,4"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text="{Binding SelectedVideoQuality.Resolution}" 
                                                   FontWeight="Medium"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                                   Text="码率:" 
                                                   Opacity="0.6" 
                                                   Margin="0,0,8,4"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   Text="{Binding SelectedVideoQuality.BitrateDescription}" 
                                                   FontWeight="Medium"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                                   Text="帧率:" 
                                                   Opacity="0.6" 
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                   FontWeight="Medium">
                                            <Run Text="{Binding SelectedVideoQuality.FrameRate, Mode=OneWay}"/><Run Text=" fps"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                
                                <TextBlock Text="{Binding SelectedVideoQuality.Description}"
                                           Opacity="0.5"
                                           FontSize="11"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0" />
                            </StackPanel>
                        </ui:Card>

                        <!-- 房间成员列表 -->
                        <ui:Card Margin="0,0,0,12"
                                 IsEnabled="{Binding IsJoinedRoom}">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,12">
                                    <ui:SymbolIcon Symbol="People24"
                                                   Margin="0,0,8,0" />
                                    <TextBlock Text="房间成员"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                                <ListBox ItemsSource="{Binding Peers}"
                                         MinHeight="80"
                                         MaxHeight="180"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="4,6">
                                                <Ellipse Width="10"
                                                         Height="10"
                                                         Fill="#4CAF50"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,10,0" />
                                                <StackPanel>
                                                    <TextBlock Text="{Binding DisplayName}"
                                                               FontWeight="Medium" />
                                                    <TextBlock Text="{Binding PeerId}"
                                                               Opacity="0.5"
                                                               FontSize="11" />
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </ui:Card>

                        <!-- 状态信息 -->
                        <ui:Card Margin="0,0,0,12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,12">
                                    <ui:SymbolIcon Symbol="Info24"
                                                   Margin="0,0,8,0" />
                                    <TextBlock Text="状态"
                                               FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock Text="{Binding StatusMessage}"
                                           TextWrapping="Wrap"
                                           Opacity="0.8"
                                           Margin="0,0,0,8" />
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,4,0,0">
                                    <TextBlock Text="服务模式: "
                                               Opacity="0.6" />
                                    <TextBlock Text="{Binding ServeMode, Converter={StaticResource ServeModeTextConverter}}"
                                               Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                                               FontWeight="Medium" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,4,0,0">
                                    <TextBlock Text="连接状态: "
                                               Opacity="0.6" />
                                    <TextBlock Text="{Binding IsConnected, Converter={StaticResource ConnectedStatusConverter}}"
                                               Foreground="{Binding IsConnected, Converter={StaticResource ConnectedColorConverter}}"
                                               FontWeight="Medium" />
                                </StackPanel>
                            </StackPanel>
                        </ui:Card>

                    </StackPanel>
                </ScrollViewer>
            </Border>

